{{> partials/header }}
<div data-controller="earthquake"
    data-earthquake-time="{{time}}"
    data-earthquake-shake_id="{{shake_id}}"
    data-earthquake-magnitude="{{magnitude}}"
    data-earthquake-depth="{{depth}}"
    data-earthquake-location_description="{{location_description}}"
    data-earthquake-source_type="{{source_type}}"
    data-earthquake-location_geojson="{{location_geojson}}"
    data-earthquake-mmi_geojson="{{mmi_geojson}}"
    data-earthquake-state="initial" class="panel">
    <div>
        <button type="button" class="btn btn-secondary" data-action="earthquake#back"><</button><h1>Earthquake data</h1>
    </div>
    <div>
        {{> components/earthquake/map }}
    </div>
    <div>
        {{> components/earthquake/info }}
    </div>
</div>

{{> partials/footer }}